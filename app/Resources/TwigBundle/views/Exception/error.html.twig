{% extends 'OdiseoBrancaRallyBundle:Frontend:layout.html.twig' %}
{% block content %}

    <header>
        <div class="menu-mobile visible-xs visible-sm">
            <div class="col-xs-8 col-sm-8">
                <a class="logo mobile" href="{{ path('odiseo_branca_rally_frontend_home') }}"><span class="sr-only">Branca Rally 2015</span></a>
            </div>
        </div>
        <div class="bg-home errors">
            <div class="container">
                <div class="row menu hidden-xs hidden-sm">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <a class="logo visible-lg-block visible-xs-block visible-sm-block visible-md-block center-block"  href="{{ path('odiseo_branca_rally_frontend_home') }}"><span class="sr-only">Branca Rally 2015</span></a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    	{% if status_code == 404 %}
                        <h1 class="text-center text-uppercase">Esta página no está disponible</h1>
                        <p class="text-center">Volvé a la <a href="{{ path('odiseo_branca_rally_frontend_home') }}">home</a> y formá parte de alguno de los equipos de Pasión Branca.</p>
                        {% else %}
                        <h1 class="text-center text-uppercase">Los autos están en boxes preparándose para la competencia.</h1>
                        <p class="text-center">Dale <a href="{{ path('odiseo_branca_rally_frontend_home') }}" id="recargarError">recargar</a> para vivir de cerca Pasión Branca Rally 2015.</p>
                        {% endif %}

                        <input type="hidden" value="{{ status_code }}" id="statusCode" name="statusCode"/>
                        <input type="hidden" value=" {{ status_text }}" id="statusText" name="statusText"/>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}