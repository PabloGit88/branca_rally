    <div id="carrera" class="carrera offset-top-200 offset-sm-md-top-200 hidden-sm hidden-xs">
        <!-- CONTENIDO DE LA CARRERA -->
        <span class="carrera-overlay hidden-xs hidden-sm"><span class="sr-only">overlay</span></span>
