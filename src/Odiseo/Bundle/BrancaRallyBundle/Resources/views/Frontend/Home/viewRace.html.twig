            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <!-- Trackers -->
                        <canvas class="absolute" id="ganador" width="1024" height="462" data-laps="1"></canvas>
                        <canvas class="absolute" id="perdedor" width="1024" height="462" data-laps="1"></canvas>
                        <!-- Trackers -->
                        <!-- AUTOS -->
                        <div data-limit-ganador='{max :200, min: 34}' data-limit-perdedor='{max :2430, min: 2200}' class="pista-puente-container md" id="bridge">
                            <img src="{{asset('bundles/odiseobrancarally/img/carrera/puente-1024.png') }}" alt="puente"/>
                        </div>
                        <div class="auto-tracker-md" id="contenedor_ganador" data-name="{{ team }}">
                            <div id="auto_ganador" class="auto-container">
                                <div class="auto auto-{{ team }}"></div>
                            </div>
                        </div>

                        <div class="absolute auto-tracker-md" id="contenedor_perdedor" data-name="{{  team == 'unico' ? 'branca' : 'unico'  }}">
                            <div id="auto_perdedor" class="auto-container">
                                <div class="auto auto-{{ team == 'unico' ? 'branca' : 'unico'  }}"></div>
                            </div>
                        </div>
                        <!-- AUTOS -->
                        <div class="sr-only">
                            <audio id="ganador_audio" controls preload="auto" loop>
                                <source src="{{ asset('bundles/odiseobrancarally/media/audio_carrera.mp3') }}" type="audio/mp3">
                                <source src="{{ asset('bundles/odiseobrancarally/media/audio_carrera.ogg') }}" type="audio/ogg">
                                Your browser does not support the audio tag.
                            </audio>
                        </div>
                        <div class="pista md pista-1024"><span class="sr-only">pista</span></div>
                    </div>
                </div>
            </div>

            <div id="timerContent" data-counter="4" class="timer-content">
                <span id="timerRace" class="timer-count"><span class="sr-only">TIMER</span></span>
                <audio controls class="sr-only" id="timerAudio">
                    <source src="{{ asset('bundles/odiseobrancarally/media/largada.mp3') }}" type="audio/mpeg">
                    <source src="{{ asset('bundles/odiseobrancarally/media/largada.ogg') }}" type="audio/ogg">
                </audio>
            </div>
        </div>



    </div>
    <div class="carrera-control hidden-xs hidden-sm ">
        <a class="btn-principal landing-play center-block hidden-xs hidden-sm" id="verCarrera" href=""> Comenzar <span class="sprites banderas"><span class="sr-only">icono</span></span></a>
    </div>

    <div class="visible-xs visible-sm">
        <div class="video-race-content">
            <button class="btn-principal video-play-carrera" id="mobilePlayCarrera" type="button"> Comenzar <span class="sprites banderas"><span class="sr-only">icono</span></span></button>
            <span class="carrera-overlay"><span class="sr-only">overlay</span></span>
            <video width="100%" height="auto" id="mobileRace" class="video-race" preload="auto" poster="{{ asset('bundles/odiseobrancarally/img/poster-'~team~'.jpg') }}">
                <source src="{{ asset('bundles/odiseobrancarally/media/'~team~'.mp4') }}" type='video/mp4'>
                <source src="{{ asset('bundles/odiseobrancarally/media/'~team~'.webm') }}" type='video/webm; codecs="vp8, vorbis"'>
                <source src="{{ asset('bundles/odiseobrancarally/media/'~team~'.ogv') }}" type='video/ogg; codecs="theora, vorbis"'>
                Este navegador no soporta ninguno de los formatos ofrecidos
            </video>
        </div>
    </div>
    <div class="carrera-ganadores off hidden-xs hidden-sm" id="ganadoresCarrera">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <a class="btn-principal pull-right btn-principal-xxs light" id="replayCarrera" href=""> Revivir carrera <span class="sprites reload"><span class="sr-only">icono</span></span></a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h2 class="text-uppercase text-center">equipo ganador</h2>
                    <img class="center-block" style="margin-top: 40px;" src="{{asset('bundles/odiseobrancarally/img/'~team~'/ganador.png') }}" alt="ganador"/>
                    <!--p class="text-center"><span class="sprites whatsapp-xxs"><span class="sr-only">icon</span></span>{{ team=='unico'?'+54 9 11 2321 8162':'+54 9 11 2321 7974' }}</p-->

                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h2 class="text-uppercase text-center">ganadores de las entradas</h2>
                        {% if race.canShowWinners %}
						{{ include('OdiseoBrancaRallyBundle:Frontend:Partials/Ganadores/_ganadoresCarrera'~raceNumber~'.html.twig') }}
						{% endif %}
                </div>
            </div>
        </div>
    </div>
    <!----IE FIX--->
    <input type="hidden" id="srcIEfix" value="{{ asset('bundles/odiseobrancarally/img/carrera/carrera-ie.png') }}" data-text="hacé click para escuchar la carrera" />
    <div class="sr-only" id="reproductorCopy">
        <div class="col-lg-12 col-sm-12">
            <div class="equipo-content">
                <div class="mic-content">
                    <a class="play" href="#" id="mobileAudioSingle"><span class="sprites play-audio"><span class="sr-only">play</span></span></a>
                </div>
                <img src="{{ asset('bundles/odiseobrancarally/img/microfono.png') }}" alt="Mic" class="center-block img-responsive"/>
            </div>
        </div>
        <div class="col-lg-12 col-sm-12" id="fixedIEtexto">
            <h4 class="text-center text-uppercase">hacé click para escuchar
                el sonido de tu motor</h4>
        </div>
    </div>
</section>

<section>
    <div class="bg-equipos-landing-{{ team }}-bottom diag offset-top-160 hidden-xs hidden-sm"><span class="sr-only">diagonal fixed</span></div>

    <div class="bg-equipos-landing-{{ team }}-bottom ">
        <div class="container">
            <div class="row visible-xs carrera-ganadores-mobile">
                <div class="col-xs-12">
                    <h2 class="text-uppercase text-center">equipo ganador</h2>
                    <img class="center-block" src="{{asset('bundles/odiseobrancarally/img/'~team~'/ganador-mobile.png') }}" alt="ganador"/>
                    <p class="text-center color-{{ team }}"><span class="sprites whatsapp-xxs"><span class="sr-only">icon</span></span>{{ team=='unico'?'+54 9 11 2321 8162':'+54 9 11 2321 7974' }}</p>

                </div>
                <div class="col-xs-12">
                    <h2 class="text-uppercase text-center">ganadores de las entradas</h2>
                        {% if race.canShowWinners %}
						{{ include('OdiseoBrancaRallyBundle:Frontend:Partials/Ganadores/_ganadoresCarrera'~raceNumber~'.html.twig') }}
						{% endif %}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="equipo-content">
                        <h1 class="text-center text-mobile-title">escuchá a tus amigos</h1>
                        <p class="text-center subtitle">Podés buscar a tus amigos y reproducir sus audios.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="logo-landing-content">
                        <div class="logo-landing-branca center-block"><span class="sr-only">Equipo Branca</span></div>
                    </div>
                    <div class="reproductor-branca">
                        <div class="audio2_html5 center-block">
                            {{  include('OdiseoBrancaRallyBundle:Frontend:Partials/_soundsPlayer.html.twig', { 'participations': participationsTeam2, 'playerId': 'reproductorBranca', 'team': 'branca' }) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="logo-landing-content">
                        <div class="logo-landing-unico center-block"><span class="sr-only">Equipo Único</span></div>
                    </div>
                    <div class="reproductor-unico">
                        <div class="audio2_html5 center-block">
                            {{  include('OdiseoBrancaRallyBundle:Frontend:Partials/_soundsPlayer.html.twig', { 'participations': participationsTeam1, 'playerId': 'reproductorUnico', 'team': 'unico' }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
    <div id="ieFixVideo">
        <span class="sr-only">ieFix</span>
    </div>
{% endblock %}

