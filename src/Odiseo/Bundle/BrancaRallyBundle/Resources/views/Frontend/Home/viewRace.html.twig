{% extends 'OdiseoBrancaRallyBundle:Frontend:layout.html.twig' %}
{% if race.getTeamWinner(race) == constant('Odiseo\\Bundle\\BrancaRallyBundle\\Game\\Team::TEAM1')%}
	{% set team = 'unico' %}
{% else %}
	{% set team = 'branca' %}
{% endif %}
{% block content %}
<header>
    <div class="menu-mobile visible-xs visible-sm">
        <div class="col-xs-8 col-sm-8">
            <a class="logo-landing-{{ team }}-rally mobile" href="{{ path('odiseo_branca_rally_frontend_home') }}"><span class="sr-only">Branca Rally 2015</span></a>
        </div>
        <div class="col-xs-4 col-sm-4">
            <a class="btn-menu-mobile pull-right" id="mobileMenuDrop" href="#"><i class="fa fa-bars"><span class="sr-only">Menu</span></i></a>
        </div>
    </div>
    <ul class="menu-list-mobile visible-xs visible-sm">
        <li><a class="btn-menu-responsive" href="{{ path('odiseo_branca_rally_frontend_home') }}">Cómo participar</a></li>
        <li><a class="btn-menu-responsive" href="{{ path('odiseo_branca_rally_frontend_home_races_winners') }}">Carreras y ganadores</a></li>
        <li><a class="btn-menu-responsive" href="{{ path('odiseo_branca_rally_frontend_terms') }}">Bases y condiciones</a></li>
    </ul>
    <div class="bg-equipos-landing-{{ team }}-top">
        <div class="container">
            <div class="row menu hidden-sm hidden-xs">
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <a class="logo-landing-{{ team }}-rally" href="{{ path('odiseo_branca_rally_frontend_home') }}"><span class="sr-only">Branca Rally 2015</span></a>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
                    <nav>
                        <ul class="menu-list pull-right">
                            <li><a class="btn-menu" href="{{ path('odiseo_branca_rally_frontend_home') }}">Cómo participar</a></li>
                            <li><a class="btn-menu" href="{{ path('odiseo_branca_rally_frontend_home_races_winners') }}">Carreras y ganadores</a></li>
                            <li><a class="btn-menu last" href="{{ path('odiseo_branca_rally_frontend_terms') }}">Bases y condiciones</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h3 class="text-center text-uppercase text-mobile-subtitle">{{ race.name }}</h3>
                    <h1 class="text-center text-uppercase text-mobile-title">Viví la carrera y enterate
                        qué equipo es el ganador.</h1>
                </div>

                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-0">
                    <p class="text-center">Viví, sentí y compartí la pasión por el Rally con Fernet Branca.</p>
                </div>

            </div>

            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 col-lg-offset-5 col-md-offset-5 col-sm-offset-5 col-xs-offset-0">
                    <a class="scroll-down" href="#"><span class="sr-only">scroll-down</span></a>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- HEADER-->

<!-- CONTENT-->
